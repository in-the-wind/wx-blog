<!--pages/posts/index.wxml-->
<view wx:for="{{posts}}" wx:key='item'>  
  <navigator
    open-type="navigate"    
    url='/pages/posts/show?id={{item.id}}'    
  >
    {{index + 1}}: {{item.title}}
  </navigator>
  <navigator
    open-type="navigate"    
    url='/pages/posts/form?id={{item.id}}'    
  >
    编辑
  </navigator>
</view>

